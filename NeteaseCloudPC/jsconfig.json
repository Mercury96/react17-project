{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@views/*": ["src/views/*"],
            "@assets/*": ["src/assets/*"],
            "@store/*": ["src/store/*"],
            "@utils/*": ["src/utils/*"],
            "@api/*": ["src/api/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}